<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="NWTAOutlineAssistUI.Views.Generate_Outline"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NWTAOutlineAssistUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Margin="0,0,50,0">

    <Grid Background="{ThemeResource NavigationViewExpandedPaneBackground}">
        <StackPanel HorizontalAlignment="Left">
            <TextBox Width="500" Height="300" Header="Messages" Margin="0 30 50 0" Text="{x:Bind messageText, Mode=OneWay}" AcceptsReturn="True" TextWrapping="Wrap"/>
            <CheckBox Margin="0 10 0 0">Open Outline After Creation</CheckBox>
            <Button Width="150" Margin="0 50 0 0" Background="LightGray" Click="Generate_Click">Generate Outline</Button>
        </StackPanel>

    </Grid>
</Page>
